#!/bin/sh
#~~~ connect or disconnect a particular bluetooth device

mac='40:DE:17:43:2F:49'

case $1 in
    connect)
        echo "Connecting..."
        bluetoothctl connect $mac
        ;;

    disconnect)
        echo "Disconnecting..."
        bluetoothctl disconnect $mac
        ;;

    mac)
        echo $mac
        ;;

    *)
        echo "Please provide subcommand: [ connect | disconnect ]"
        ;;
esac

