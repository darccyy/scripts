#!/bin/sh

# Get location of garf subscripts
dir="$(readlink -f "$(dirname "$0")/..")/garf"

# Missing command
if [ ! "$1" ]; then
    echo 'garf: missing subcommand'
    echo "    available subcommands: [help|show|make|find|date|error]"
    exit 1
fi

# Remove subcommand from $@
cmd="$1"
shift

case "$cmd" in
    # Help
    'help'|'h'|'--help'|'-h')
        echo 'garf: available subcommands'
        echo '    show:  display a comic'
        echo '    make:  make post data including formatted comic'
        echo '    find:  open all comics with given month and day, or post id'
        echo '    date:  add date to existing post'
        echo '    error: show next post with error'
        exit 0
        ;;

    # Public
    'show'|'s')
        "$dir/show" "$@"
        ;;
    'make'|'m')
        "$dir/make" "$@"
        ;;
    'find'|'f')
        "$dir/find" "$@"
        ;;
    'date'|'d')
        "$dir/date" "$@"
        ;;
    'error'|'e')
        "$dir/error" "$@"
        ;;

    # Unlisted
    'date-all')
        "$dir/date-all" "$@"
        ;;

    # Private
    '+format')
        "$dir/format" "$@"
        ;;
    '+organize')
        "$dir/organize" "$@"
        ;;

    *)
        echo "garf: unknown subcommand: '$cmd'"
        echo "    available subcommands: [help|show|make|find|date]"
        exit 1
        ;;
esac

