#!/bin/sh
INFO='check all user scripts for bashisms or linting errors'

# Get location of scripts folder
scripts="$(readlink -f "$(dirname "$0")/..")"

sc() {
    # Ignore `INFO` unused
    shellcheck "$0" --exclude 2034
}

# Check each folder, or fail
sc "$scripts/cmd/"*  || exit 1
sc "$scripts/garf/"* || exit 1

echo 'No issues found.'

